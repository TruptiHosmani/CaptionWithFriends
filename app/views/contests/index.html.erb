 <div class="row-fluid">
   <h1>Listing contests</h1>

  <table class="table">
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>End date</th>
      <th>Actions</th>
      <th></th>
      <th></th>
    </tr>

  <% @contests.each do |contest| %>
    <tr>
      <td><%= contest.user %></td>
      <td><%= contest.title %></td>
      <td><%= contest.end_date %></td>
      <td><%= link_to 'Show', contest %></td>
      <td><% if current_user == contest.user  %><%= link_to 'Edit', edit_contest_path(contest) %>     <% end %></td>
      <td><% if current_user == contest.user %><%= link_to 'Destroy', contest, confirm: 'Are you sure?', method: :delete %><% end %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Contest', new_contest_path %>
  </div>
