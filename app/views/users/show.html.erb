<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if current_user!= @user && @user != current_user.friends%>
      <ol>
        <form action="/friendship/create" method= "POST">
          <input type="hidden" name="friend_id" value="<%= @user.id %>"/>
          <input type="submit" value="ADD Friend" class="btn btn-large btn-primary"/>
        </form>
      </ol>
    <% end %>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>

      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>